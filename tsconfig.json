{
  "ts-node": {
    "transpileOnly": true,
    "files": true
  },
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "noFallthroughCasesInSwitch": false,
    "noImplicitAny": true,
    "module": "commonjs",
    "outDir": "./dist",
    "removeComments": true,
    "rootDir": "./src",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": false,
    "target": "ES2021",
    "types": ["jest", "node"],
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "paths": {
      "src/*": ["src/*"],
      "@app/common": ["libs/common/src"],
      "@app/common/*": ["libs/common/src/*"]
    }
  },
  // "include": ["src/**/*.ts", "tests/**/*.ts"],
  "include": ["src/**/*.ts"],
  "exclude": [
    "./coverage",
    "./dist",
    "__tests__",
    "jest.config.js",
    "node_modules"
  ]
}
